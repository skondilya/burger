<div>
  <img src="../assets/img/burger.jpg" class="thumbnail" alt="burger">
</div>

<h1>Eat-Da-Burger!</h1>

<div class="noteatten">
  <ul class="burgerName">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form class="button" action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour it!</button>
          </form>

        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="eatten">
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="enter">
  <form class="create-update-form" action="/" method="POST">
    <textarea type="text" name="burger_name"></textarea>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat Click the "Submit" button</p>
  </form>
</div> 

