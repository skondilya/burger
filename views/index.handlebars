<h1>Burger time!</h1>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour it!</button>
        </form>

        {{> burger/delete-burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<form action="/" method="POST">
  <textarea type="text" name="burger"></textarea>

  <button type="submit">Submit</button>
  <p>Enter a burger you want to eat Click the "Submit" button</p>
</form>